<!-- Show Information -->
<div class="modal fade" id="showInformation" tabindex="-1" role="dialog" aria-labelledby="showInformationLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="showInformationLabel"><%= "#{@project.name.upcase}'S INFORMATION"%></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" id="name" aria-describedby="name" value="<%= @project.name %>">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" id="description" rows="3"><%= @project.description %></textarea>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <% if @project.status == 1 %>
                        <input type="text" class="form-control" id="name" aria-describedby="name" value="Developing">
                        <% elsif @project.status == 2 %>
                        <input type="text" class="form-control" id="name" aria-describedby="name" value="Stand by">
                        <% else %>
                        <input type="text" class="form-control" id="name" aria-describedby="name" value="Finished">
                        <% end %>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>